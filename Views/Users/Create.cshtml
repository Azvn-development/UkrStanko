@model UkrStanko.ViewModels.Users.CreateViewModel

<div class="panel">
    <div class="panel-header">
        <h2 class="form-title">Добавление пользователя</h2>
    </div>

    <div class="panel-body">
        <form asp-action="Create"
              method="post"
              novalidate="novalidate"
              data-ajax="true"
              data-ajax-method="post"
              data-ajax-update="#main-data"
              data-ajax-begin="$('#waiting-modal').fadeIn('fast')"
              data-ajax-complete="$('#waiting-modal').fadeOut('fast')"
              enctype="multipart/form-data"
              class="form">
            @* Поле соединения пользователя *@
            <input id="ConnectionId" name="ConnectionId" hidden />

            @*Поле загрузки фото*@
            <div id="downloadFileDialog" class="form-user-image">
                <h5>Фото профиля</h5>
                <i name="deleteImageButton" class="fa fa-minus-square fa-2x icon-cancel"></i>
            </div>
            <input id="ImagesInput" type="file" accept="image/*,image/jpeq,image/png" hidden />

            @* Ошибки валидации на уровне модели *@
            <div class="validation" asp-validation-summary="ModelOnly"></div>

            @* Поле имени пользователя *@
            <div class="form-group">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-input" placeholder="@Html.DisplayNameFor(model => model.UserName)" autocomplete="off" tabindex="1" />
                <span asp-validation-for="UserName"></span>
            </div>

            @* Поле ввода EMAIL пользователя *@
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-input" placeholder="@Html.DisplayNameFor(model => model.Email)" autocomplete="off" tabindex="2" />
                <span asp-validation-for="Email"></span>
            </div>

            @* Поле ввода пароля пользователя *@
            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-input" placeholder="@Html.DisplayNameFor(model => model.Password)" autocomplete="new-password" tabindex="4" />
                <span asp-validation-for="Password"></span>
            </div>

            @* Поле ввода подтверждения пароля пользователя *@
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-input" placeholder="@Html.DisplayNameFor(model => model.ConfirmPassword)" autocomplete="off" tabindex="5" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            @* Поле ввода выбора роли пользователя *@
            <div class="form-group">
                <label asp-for="Role" class="form-label"></label>
                <input asp-for="Role" class="form-input" placeholder="@Html.DisplayNameFor(model => model.Role)" autocomplete="off" tabindex="6" />
                <span asp-validation-for="Role"></span>
            </div>

            <div class="form-btn-group">
                <button type="submit" class="btn btn-add">Добавить</button>
                <a onclick="goToUrl(null, '@Url.Action("Index")', false)" class="btn btn-cancel">Отмена</a>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("_Scripts")