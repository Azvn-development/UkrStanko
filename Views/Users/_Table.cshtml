@model IEnumerable<UkrStanko.Models.Security.AppUser>

@{
    int i = 1;
}

@if (Model.Count() == 0)
{
    <h4 class="danger-message">Пользователи не найдены</h4>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Номер П/П</th>
                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Role)</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="10%" align="center" class="tablet-hide">@(i++)</td>
                    <td align="center" description="@item.UserName" class="title">
                        <p class="tablet-hide">@item.UserName</p>

                        <span class="subsidiary-controls pc-hide">
                            <i class="fa fa-pencil-square fa-2x icon-info" onclick="{ saveUrl(window.location.href); goToUrl(window.location.href, '@Url.Action("Edit", new { name = item.UserName })', false) }"></i>
                            <i id="@item.Id" class="fa fa-minus-square fa-2x icon-cancel" onclick="{ $('[name=\'dialog-delete-button\']').attr('id', $(this).attr('id')); showDialog('#delete-dialog') }"></i>
                        </span>
                    </td>
                    <td align="center">@item.Email</td>
                    <td align="center">@item.Role</td>
                    <td align="center" width="10%" class="tablet-hide">
                        <span>
                            <i class="fa fa-pencil-square fa-2x icon-info" onclick="{ saveUrl(window.location.href); goToUrl(window.location.href, '@Url.Action("Edit", new { name = item.UserName })', false) }"></i>
                            <i id="@item.Id" class="fa fa-minus-square fa-2x icon-cancel" onclick="{ $('[name=\'dialog-delete-button\']').attr('id', $(this).attr('id')); showDialog('#delete-dialog') }"></i>
                        </span>
                    </td>
                </tr>
            } @*foreach*@
        </tbody>
    </table>
}


