@model UkrStanko.ViewModels.MachineTypes.CreateViewModel

@{
    ViewBag.Url = Url.Action("Create");
}

<div class="panel">
    <div class="panel-header">
        <h2 class="form-title">Добавление типа станка</h2>
    </div>

    <div class="panel-body">
        <form asp-action="Create"
              method="post"
              novalidate="novalidate"
              data-ajax="true"
              data-ajax-method="post"
              data-ajax-update="#main-data"
              data-ajax-begin="$('#waiting-modal').fadeIn('fast')"
              data-ajax-complete="$('#waiting-modal').fadeOut('fast')"
              class="form">

            @* Поле соединения пользователя *@
            <input id="ConnectionId" name="ConnectionId" hidden />

            @*Поле ввода наименования*@
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-input" placeholder="@Html.DisplayNameFor(model => model.Name)" autocomplete="off" tabindex="1" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-btn-group">
                <button type="submit" class="btn btn-add">Добавить</button>
                <a onclick="goToUrl(null, '@Url.Action("Index")', false)" class="btn btn-cancel">Отмена</a>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("_Scripts") 