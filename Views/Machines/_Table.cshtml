@model IEnumerable<UkrStanko.Models.App.Machine>

@if (Model.Count() == 0)
{
    <h4 class="danger-message">Станки не найдены</h4>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Номер П/П</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.MachineType.ParentMachineType.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Analogue)</th>
                <th></th>
            </tr>
        </thead>

        <tbody id="tbody">
            @await Html.PartialAsync("_TBody")
        </tbody>
    </table>
}